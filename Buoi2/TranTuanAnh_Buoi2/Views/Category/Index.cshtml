@model IEnumerable<TranTuanAnh_Buoi2.Models.Category>

    <h2>Danh sách danh mục</h2>
    <p style="text-align:right">
        <a asp-action="Add" class="btn btn-primary">Thêm danh mục</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-primary">View</a>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>