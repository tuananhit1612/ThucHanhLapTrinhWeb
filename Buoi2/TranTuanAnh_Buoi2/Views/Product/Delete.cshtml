@model TranTuanAnh_Buoi2.Models.Product
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5>Name: <span class="fw-normal">@Model.Name</span></h5>
                        <h5>Price: <span class="fw-normal">@Model.Price</span></h5>
                        <h5>Description: <span class="fw-normal">@Model.Description</span></h5>
                    </div>
                    <div class="mb-3">
                        <h6>Main Image</h6>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mb-2" style="width: 200px; height: auto;" />
                        }
                        else
                        {
                            <div class="alert alert-warning p-2">No image available</div>
                        }
                    </div>
                    <div class="mb-3">
                        <h6>Other Images</h6>
                        @if (Model.ImageUrls != null && Model.ImageUrls.Count > 0)
                        {
                            foreach (var imageUrl in Model.ImageUrls)
                            {
                                <img src="@imageUrl" alt="Product Image" class="img-thumbnail me-2 mb-2" style="width: 120px; height: auto;" />
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning p-2">No additional images available</div>
                        }
                    </div>
                    <form asp-action="DeleteConfirmed" method="post" class="d-flex gap-2">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>