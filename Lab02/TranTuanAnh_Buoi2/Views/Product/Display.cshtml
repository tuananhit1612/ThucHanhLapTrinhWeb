@model TranTuanAnh_Buoi2.Models.Product
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Product Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Model.Price</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                    <div class="mb-4">
                        <h5>Main Image</h5>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mb-2" style="width: 300px; height: auto;" />
                        }
                        else
                        {
                            <div class="alert alert-warning p-2">No image available</div>
                        }
                    </div>
                    <div class="mb-4">
                        <h5>Other Images</h5>
                        @if (Model.ImageUrls != null && Model.ImageUrls.Count > 0)
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var imageUrl in Model.ImageUrls)
                                {
                                    <img src="@imageUrl" alt="Product Image" class="img-thumbnail" style="width: 120px; height: auto;" />
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning p-2">No additional images available</div>
                        }
                    </div>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>