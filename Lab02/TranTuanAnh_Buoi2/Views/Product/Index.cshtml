@model IEnumerable<TranTuanAnh_Buoi2.Models.Product>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col text-center">
            <h2 class="fw-bold">Danh sách sản phẩm</h2>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm sản phẩm
            </a>
        </div>
    </div>
    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="Product Image" class="img-thumbnail" style="width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-primary btn-sm me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>