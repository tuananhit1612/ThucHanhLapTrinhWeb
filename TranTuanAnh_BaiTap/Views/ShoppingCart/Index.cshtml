@model ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng xe";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4 text-center">🚗 Giỏ Hàng Xe Của Bạn</h2>

    @if (Model.Items != null && Model.Items.Count > 0)
    {
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark text-white">
                <tr>
                    <th>Tên xe</th>
                    <th>Hãng xe</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-semibold">@item.TenXe</td>
                        

                        <td>
                            <div class="d-flex justify-content-center align-items-center gap-2">
                                <form asp-action="DecreaseQuantity" asp-route-id="@item.XeID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
                                </form>

                                <span class="fw-bold">@item.Quantity</span>

                                <form asp-action="IncreaseQuantity" asp-route-id="@item.XeID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">+</button>
                                </form>
                            </div>
                        </td>

                        <td class="text-danger fw-bold">@item.Gia.ToString("N0") đ</td>
                        <td class="text-success fw-bold">@((item.Gia * item.Quantity).ToString("N0")) đ</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.XeID" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-4">
            <a asp-action="Checkout" class="btn btn-success btn-lg rounded-pill px-5">
                <i class="bi bi-credit-card"></i> Tiến hành thanh toán
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center fs-5">
            🚙 Giỏ hàng của bạn chưa có xe nào. Hãy khám phá và chọn một chiếc nhé!
        </div>
    }
</div>
