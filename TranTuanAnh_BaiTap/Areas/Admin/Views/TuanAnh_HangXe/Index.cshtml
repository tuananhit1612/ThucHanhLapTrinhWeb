@model IEnumerable<TranTuanAnh_BaiTap.Models.TuanAnh_HangXe>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var search = HttpContextAccessor.HttpContext.Request.Query["search"];
}
@{
    ViewData["Title"] = "Danh sách hãng xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách hãng xe</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm hãng mới
        </a>
    </div>

    <form method="get" asp-action="Index" class="input-group mb-4">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Tìm xe theo tên hãng..." />

        <button class="btn btn-outline-primary" type="submit">
            <i class="bi bi-search"></i> Tìm
        </button>
    </form>

    <table class="table table-hover table-bordered shadow-sm bg-white">
        <thead class="table-light">
            <tr>
                <th>Tên hãng</th>
                <th class="text-center" style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hang in Model)
            {
                <tr>
                    <td>@hang.TenHang</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@hang.HangXeID" class="btn btn-info btn-sm me-1"><i class="bi bi-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@hang.HangXeID" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Delete" asp-route-id="@hang.HangXeID" class="btn btn-danger btn-sm" onclick="return confirm('Xóa hãng này?');"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
