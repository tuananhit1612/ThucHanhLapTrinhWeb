@model TranTuanAnh_BaiTap.Models.TuanAnh_HangXe
@{
    ViewData["Title"] = "Chi tiết hãng xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Thông tin chi tiết hãng xe</h5>
            <a asp-action="Index" class="btn btn-light btn-sm"><i class="bi bi-arrow-left-circle"></i> Quay lại</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã hãng</dt>
                <dd class="col-sm-9">@Model.HangXeID</dd>

                <dt class="col-sm-3">Tên hãng</dt>
                <dd class="col-sm-9">@Model.TenHang</dd>
            </dl>
        </div>
    </div>
</div>
