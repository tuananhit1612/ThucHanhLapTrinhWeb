@model IEnumerable<TranTuanAnh_BaiTap.Models.TuanAnh_Xe>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var search = HttpContextAccessor.HttpContext.Request.Query["search"];
}
@{
    ViewData["Title"] = "Danh sách xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách xe</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm xe mới
        </a>
    </div>

    <form method="get" asp-action="Index" class="input-group mb-4">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Tìm xe theo tên xe..." />

        <button class="btn btn-outline-primary" type="submit">
            <i class="bi bi-search"></i> Tìm
        </button>
    </form>

    <table class="table table-hover table-bordered shadow-sm bg-white">
        <thead class="table-light">
            <tr>
                <th>Tên xe</th>
                <th>Giá</th>
                <th>Ngày sản xuất</th>
                <th>Hãng xe</th>
                <th class="text-center" style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var xe in Model)
            {
                <tr>
                    <td>@xe.TenXe</td>
                    <td>@string.Format("{0:N0} đ", xe.Gia)</td>
                    <td>@xe.NgaySanXuat.ToString("dd/MM/yyyy")</td>
                    <td>@xe.HangXe?.TenHang</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@xe.XeID" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@xe.XeID" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@xe.XeID" class="btn btn-sm btn-danger"
                           onclick="return confirm('Xác nhận xóa xe này?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
