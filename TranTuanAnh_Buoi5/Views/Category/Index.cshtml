@model IEnumerable<TranTuanAnh_Buoi4.Models.Category>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Danh sách danh mục</h2>
                    <a asp-action="Add" class="btn btn-light text-primary fw-bold">
                        <i class="bi bi-plus-circle"></i> Thêm danh mục
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th style="width: 220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>@category.Name</td>
                                    <td>
                                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-sm btn-primary me-1">View</a>
                                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
