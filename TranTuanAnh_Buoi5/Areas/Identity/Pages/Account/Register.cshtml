@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<!-- Register Page -->
<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center fw-bold mb-4 text-primary">@ViewData["Title"]</h2>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <!-- Full Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="Họ và tên" />
                    <label asp-for="Input.FullName">Họ và tên</label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                    <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Input.Role" class="form-label fw-bold">Vai trò</label>
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>- Chọn vai trò -</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <!-- Submit -->
                <div class="d-grid mb-3">
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                </div>

                <!-- Links -->
                <div class="text-center small">
                    <p>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đã có tài khoản? Đăng nhập ngay</a>
                    </p>
                </div>
            </form>

            <!-- External Logins -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr />
                <div class="text-center mb-3 fw-bold">Hoặc đăng ký bằng:</div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Đăng ký bằng @provider.DisplayName">
                            <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName
                        </button>
                    }
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
