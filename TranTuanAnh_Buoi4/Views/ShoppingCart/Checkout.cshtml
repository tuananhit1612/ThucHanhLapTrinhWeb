@model Order

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">📦 Thông tin đặt hàng</h2>

    <form asp-action="Checkout" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="ShippingAddress" class="form-label fw-semibold">Địa chỉ giao hàng</label>
            <input asp-for="ShippingAddress" class="form-control" placeholder="Nhập địa chỉ của bạn..." required />
            <div class="invalid-feedback">
                Vui lòng nhập địa chỉ giao hàng.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-semibold">Ghi chú</label>
            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Ví dụ: Giao trong giờ hành chính..."></textarea>
        </div>

        <button type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-bag-check"></i> Xác nhận đặt hàng
        </button>
    </form>
</div>

<!-- Optional: Bootstrap 5 client-side validation -->
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
